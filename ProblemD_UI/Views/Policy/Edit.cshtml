@model ClassLibrary.Model.Policy

<div>
    <h4>Pets</h4>
    <hr />
</div>
<p>
    @Html.ActionLink("Add Pet", "AddPetToPolicy",new { PetOwnerId = Model.PolicyId , policyNumber  = Model.PolicyNumber})
</p>
<table border="1">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Pets[0].PetName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Pets[0].PetType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Pets[0].DateOfBirth)
        </th>
        <th></th>
    </tr>

    @foreach (var pet in Model.Pets)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => pet.PetName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => pet.PetType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => pet.DateOfBirth)
            </td>
            <td>
                @Html.ActionLink("Delete Pet", "DeletePet", new { id = pet.PetId, policyNumber = Model.PolicyNumber })
            </td>
            <td>
                @Html.ActionLink("Transfer Pet", "TransferPet", new { id = pet.PetId, policyNumber = Model.PolicyNumber })
            </td>
        </tr>
    }
</table>
<p>
    @*@Html.ActionLink("Edit", "Edit", new { id = Model.PolicyId, PolicyNumber = Model.PolicyNumber }) |*@

    @Html.ActionLink("Back to List", "PoliciesList")
</p>
